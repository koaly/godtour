extends layout

block content
    .container(style='margin-bottom:50px; margin-top:30px')
        h1= tour.title
        h5 organized by #{tour.organizer}
        if tour.now_seat
            h5 #{tour.now_seat} seat(s) remaining!
            form(method="POST", action="/tour/"+tour._id)
                if user
                    input.btn.btn-primary(type="submit", value="จองงงงงงงงงงงงงงงงงงงงง")
                    a.btn.btn-danger.delete-tour(href='#', data-id=tour._id) Delete
        else
            h5 out of order sorry!
        br