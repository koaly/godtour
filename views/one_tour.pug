extends layout

block content
    .container(style='margin-bottom:50px; margin-top:30px;background-color:lightgrey; border:groove')
        h1 #{tour.title}
        img.card-img-top.img-thumbnail(src='https://d1nabgopwop1kh.cloudfront.net/hotel-asset/30000002100149018_wh_32' alt='sample image')
        h5.card.border.border-info organized by #{tour.organizer}
        h5.card.border.border-info highlight: #{tour.highlight}
        h5.card.border.border-info price: #{tour.price} 
        h5.card.border.border-info destination: #{tour.destination}
        h5.card.border.border-info days: #{tour.day_duration} nights: #{tour.night_duration}
        //h5.card.border.border-info night_duration: #{tour.night_duration}
        //h5.card.border.border-info start_book: #{tour.start_book}
        //h5.card.border.border-info end_book: #{tour.end_book}
        //h5.card.border.border-info start_trip: #{tour.start_trip}
        //h5.card.border.border-info end_trip: #{tour.end_trip}
        h5.card.border.border-info flight_airline: #{tour.flight_airline} 
        h5.card.border.border-info flight_airport: #{tour.flight_airport}
        h5.card.border.border-info flight_depart: #{tour.flight_depart}
        h5.card.border.border-info flight_return: #{tour.flight_return}
        h5.card.border.border-info food: #{tour.food}
        h5.card.border.border-info stars: #{tour.stars}
        //h5.card.border.border-info max_seat: #{tour.max_seat}
        h5.card.border.border-info seat(s) remaining: #{tour.now_seat} / #{tour.max_seat}
        h5.card.border.border-info description: #{tour.description}
        h5.card.border.border-info stars: #{tour.stars}
        //h5.card.border.border-info highlight: #{tour.highlight}
    .container
        if tour.now_seat
            h4 #{tour.now_seat} seat(s) remaining!
        else
            h4 out of order sorry!
        form(method="POST", action="/tour/"+tour._id)
            if(user)
                if(((user.state)&&(user._id==tour.organizerId)) || user.state == 2)
                    a.btn.btn-danger.delete-tour(href='#', data-id=tour._id style="margin-right:20px") Delete
                    a.btn.btn-dark(href='/tour/edit/'+tour._id, data-id=tour._id) Edit
                else
                    input.btn.btn-primary(style="margin-right:20px" type="submit", value="จองงงงงงงงงงงงงงงงงงงงง")
        br