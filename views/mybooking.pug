extends layout

block content
    .container(style="margin-top:30px")
        h1 #{title}
        .row
            .col-lg-4
                img.rounded-circle(src=user.photo+'0' style='width:250px; height:250px' alt='profile photo')

                ul.nav.nav-pills.flex-column
                    li.nav-item
                        a.nav-link(href='/profile') Edit Profile
                    li.nav-item
                        a.nav-link(href='#') My Cards
                    li.nav-item
                        a.nav-link(href='#') Purchase List
                    li.nav-item.active-page
                        a.nav-link(href='#') My Booking
                    hr.d-sm-none
            .col-lg-8
                table.table
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Tour Name
                            th(scope='col') Tour ID
                            th(scope='col')
                    thead
                        each booking, i in bookings
                            tr
                                th(scope='row') #{i+1}
                                td #{booking.tourTitle}
                                td #{booking.tourId}
                                td
                                    a.btn.btn-danger(href='/profile/mybooking/'+booking._id) Cancel
                        
