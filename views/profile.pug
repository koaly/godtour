extends layout

block content
    .container(style="margin-top:30px; margin:50px")
        .row
            .col-lg-4.card(style="border-left:10px dashed coral;border-bottom:10px dashed coral;border-top:10px dashed coral;")
                img.rounded-circle.mx-auto(src=user.photo+'0' style='width:250px; height:250px;margin-top:15px;margin-bottom:15px' alt='profile photo')

                ul.nav.nav-pills.flex-column
                    li.nav-item.active-page
                        a.nav-link(href='#') Edit Profile
                    li.nav-item
                        a.nav-link(href='#' style='cursor:not-allowed') My Cards
                    li.nav-item
                        a.nav-link(href='#' style='cursor:not-allowed') Purchase List
                    li.nav-item
                        a.nav-link(href='/profile/mybooking') My Booking
                    br
                    hr.d-sm-none
            .col-lg-8.card(style="border:10px dashed coral")
                h4.card(style='margin-top:15px;margin-bottom:15px') Username: #{user.username}
                h4.card(style='margin-top:15px;margin-bottom:15px') First name: #{user.firstname}
                h4.card(style='margin-top:15px;margin-bottom:15px') Last name: #{user.lastname}
                h4.card(style='margin-top:15px;margin-bottom:15px') Email: #{user.email}
                h4.card(style='margin-top:15px;margin-bottom:15px') Gender: #{user.gender}
                
